    Private Sub Button_Click(sender As Object, e As EventArgs) Handles Button1.Click, Button2.Click, Button3.Click, Button4.Click, Button5.Click, Button6.Click, Button7.Click, Button8.Click, Button9.Click
        Dim b As Button = sender
        If CheckForXorO = False Then
            b.Text = "X"
            CheckForXorO = True
            Label5.Text = "Player O's Turn"
        Else
            b.Text = "O"
            CheckForXorO = False
            Label5.Text = "Player X's Turn"
        End If
        b.Enabled = False
        Checkforwin()
    End Sub
    Private Sub ButtonReset_Click(sender As Object, e As EventArgs) Handles ButtonReset.Click
        Button1.Enabled = True
        Button2.Enabled = True
        Button3.Enabled = True
        Button4.Enabled = True
        Button5.Enabled = True
        Button6.Enabled = True
        Button7.Enabled = True
        Button8.Enabled = True
        Button9.Enabled = True

        Button1.Text = ""
        Button2.Text = ""
        Button3.Text = ""
        Button4.Text = ""
        Button5.Text = ""
        Button6.Text = ""
        Button7.Text = ""
        Button8.Text = ""
        Button9.Text = ""

        Button1.BackColor = Color.FromArgb(221, 184, 146)
        Button2.BackColor = Color.FromArgb(221, 184, 146)
        Button3.BackColor = Color.FromArgb(221, 184, 146)
        Button4.BackColor = Color.FromArgb(221, 184, 146)
        Button5.BackColor = Color.FromArgb(221, 184, 146)
        Button6.BackColor = Color.FromArgb(221, 184, 146)
        Button7.BackColor = Color.FromArgb(221, 184, 146)
        Button8.BackColor = Color.FromArgb(221, 184, 146)
        Button9.BackColor = Color.FromArgb(221, 184, 146)
    End Sub

    Private Sub ButtonNewGame_Click(sender As Object, e As EventArgs) Handles ButtonNewGame.Click
        Dim checkforNewGame As DialogResult = MessageBox.Show("Are you sure you want to start a New Game?", "Tic Tac Toe", MessageBoxButtons.YesNo, MessageBoxIcon.Question)
        If checkforNewGame = DialogResult.Yes Then
            buttonsEnabledFalse()
            Button1.Enabled = True
            Button2.Enabled = True
            Button3.Enabled = True
            Button4.Enabled = True
            Button5.Enabled = True
            Button6.Enabled = True
            Button7.Enabled = True
            Button8.Enabled = True
            Button9.Enabled = True

            Button1.Text = ""
            Button2.Text = ""
            Button3.Text = ""
            Button4.Text = ""
            Button5.Text = ""
            Button6.Text = ""
            Button7.Text = ""
            Button8.Text = ""
            Button9.Text = ""

            Button1.BackColor = Color.FromArgb(221, 184, 146)
            Button2.BackColor = Color.FromArgb(221, 184, 146)
            Button3.BackColor = Color.FromArgb(221, 184, 146)
            Button4.BackColor = Color.FromArgb(221, 184, 146)
            Button5.BackColor = Color.FromArgb(221, 184, 146)
            Button6.BackColor = Color.FromArgb(221, 184, 146)
            Button7.BackColor = Color.FromArgb(221, 184, 146)
            Button8.BackColor = Color.FromArgb(221, 184, 146)
            Button9.BackColor = Color.FromArgb(221, 184, 146)

            LabelPlayerX.Text = "0"
            LabelPlayerO.Text = "0"
        ElseIf checkforNewGame = DialogResult.No Then
        End If

    End Sub
    Private Sub ButtonExit_Click(sender As Object, e As EventArgs) Handles ButtonExit.Click
        Dim checkforExit As DialogResult = MessageBox.Show("Are you sure you want to leave?", "Tic Tac Toe", MessageBoxButtons.YesNo, MessageBoxIcon.Question)
        If checkforExit = DialogResult.Yes Then
            Application.Exit()
        ElseIf checkforExit = DialogResult.No Then
        End If
    End Sub
    Private Sub Button10_Click(sender As Object, e As EventArgs) Handles Button10.Click
        MessageBox.Show("Programmed and Designed by Carpio" & vbCrLf & "(Nov 2023)", "Credit", MessageBoxButtons.OK, MessageBoxIcon.Information)
    End Sub
    Private Sub Button11_Click(sender As Object, e As EventArgs) Handles Button11.Click
        CheckForXorO = True
        Label5.Text = "Player O's Turn"
    End Sub

    Private Sub Button12_Click(sender As Object, e As EventArgs) Handles Button12.Click
        CheckForXorO = False
        Label5.Text = "Player X's Turn"

    End Sub

    Private Sub Label5_Click(sender As Object, e As EventArgs) Handles Label5.Click

    End Sub
End Class
